@model GamesDetailViewModel


<h2>Game details</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@Model.Title</h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.Id</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Title</dt>
            <dd>@Model.Title</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Rating</dt>
            <dd style="font-size:large;color:goldenrod">
                @{
                    int fullStars = (Model.Rating ?? 0);
                    int emptyStars = 5 - fullStars;
                }
                @for (int star = 0; star < fullStars; star++)
                {
                    <span class="fas fa-star" aria-hidden="true"></span>
                }
                @for (int star = 0; star < emptyStars; star++)
                {
                    <span class="far fa-star" aria-hidden="true"></span>
                }
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Developer</dt>
            <dd>
                <a asp-action="showdeveloper" asp-controller="developers" asp-route-id="@Model.DeveloperId">
                    @Model.DeveloperName
                </a>
            </dd>
        </dl>
    </div>
</div>

<p>
    <a asp-controller="Games" asp-action="Index" class="btn btn-primary">&laquo; Show all games</a>
</p>

