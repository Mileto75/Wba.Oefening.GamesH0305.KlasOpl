@model GamesDetailViewModel
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@Model.Title</h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.Id</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Title</dt>
            <dd>@Model.Title</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Rating</dt>
            <dd style="font-size:large;color:goldenrod">
                <partial name="_RatingStarsPartial" model="@Model.Rating" />
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>Developer</dt>
            <dd>
                <a asp-action="showdeveloper" asp-controller="developers" asp-route-id="@Model.DeveloperId">
                    @Model.DeveloperName
                </a>
            </dd>
        </dl>
    </div>
</div>
